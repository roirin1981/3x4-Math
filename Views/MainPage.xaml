<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="_3x4_Math.Views.MainPage"
                Title="Home">

    <!--Shell.NavBarIsVisible="False"-->

    <ScrollView>
        <Grid RowSpacing="10" RowDefinitions="Auto,Auto,Auto" Padding="10">
            <Button Command="{Binding IncrementCounterCommand}" Text="Contar" Grid.Row="0"></Button>
            <Label Text="{Binding Message2}" Grid.Row="1"/>
            <Button Command="{Binding ShowMessageCommand}" Text="Mensaje" Grid.Row="2"></Button>
        </Grid>
    </ScrollView>
</ContentPage>